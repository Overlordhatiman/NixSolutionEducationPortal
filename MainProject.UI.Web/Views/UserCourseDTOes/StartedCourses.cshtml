@model IEnumerable<MainProject.BL.DTO.CourseDTO>

@{
    ViewData["Title"] = "Started courses";
}

<h1>Started courses</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Materials
            </th>
            <th>
                Skills
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @foreach (var material in item.Materials)
            {
                @Html.DisplayFor(modelItem => material.Name)<br/>

            }
        </td>
        <td>
        @foreach (var skill in item.Skills)
        {
            @Html.DisplayFor(modelItem => skill.Name)<br/>
        }
        </td>
        <td>
            <a asp-action="FinishMaterials" asp-route-id="@item.Id">Finish materials</a>
        </td>
    </tr>
}
</tbody>
</table>