@model MainProject.UI.Web.Models.LoginModel
 
<h2>Вход на сайт</h2>
 
<div class="text-center">
    <p>Not a member? <a asp-action="Register" asp-controller="Account">Регистрация</a></p>
</div>
 
<form class="LoginForm" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-outline mb-4">
            <label asp-for="Email" for="form2Example1">Введите Email</label>
            <input type="text" asp-for="Email" id="form2Example1" class="form-control"/>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-outline mb-4">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" id="form2Example2" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-outline mb-4">
            <input type="submit" value="Войти" class="btn btn-primary btn-block mb-4" />
        </div>
    </div>
</form>